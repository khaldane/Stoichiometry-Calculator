<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Close" HorizontalAlignment="Left" Margin="330,70,0,0" VerticalAlignment="Top" Width="153" Height="38" Name="Close" Click="Close_Click" />
        <Button Content="Normalize" HorizontalAlignment="Left" Margin="330,185,0,0" VerticalAlignment="Top" Width="153" Height="38" Name="Normalize" Click="Normalize_Click"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="330,228,0,0" VerticalAlignment="Top" Width="153" Height="38" Name="Calculate" Click="Calculate_Click"/>
        <TextBox HorizontalAlignment="Left" Height="39" Margin="39,227,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246" Name ="WeightTotal" TextChanged="TextBox_TextChanged"/>
        <Label Content="Enter Formula" HorizontalAlignment="Left" Margin="39,67,0,0" VerticalAlignment="Top" Width="228"/>
        <Label Content="If it exists, that compound's molecular weight is:" HorizontalAlignment="Left" Margin="39,197,0,0" VerticalAlignment="Top" Width="263"/>
        <ComboBox Name="FormulaComboBox" HorizontalAlignment="Left" Margin="39,98,0,0" VerticalAlignment="Top" Width="246" Height="34" IsEditable="True" SelectionChanged="FormulaComboBox_SelectionChanged"/>

    </Grid>
</Window>
